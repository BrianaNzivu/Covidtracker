                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textViewNine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total cases"
                            android:textColor="@color/Black"
                           />

                        <TextView
                            android:id="@+id/totalCasesAfrica"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
