                        <TextView
                            android:id="@+id/newDeathsAfrica"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/textViewEleven"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Deaths"

                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/totalDeathsAfrica"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewTwelve"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Recovered"
                            android:textColor="@color/Black"
                           />

                        <TextView
                            android:id="@+id/newRecoveredAfrica"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/textViewThirteen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Recovered"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/totalRecoveredAfrica"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
